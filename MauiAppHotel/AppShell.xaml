<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppHotel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppHotel.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppHotel">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:ContratacaoHospedagem}"
        Route="MainPage" />

    <ShellContent
        Title="Sobre"
        ContentTemplate="{DataTemplate local:SobrePage}"
        Route="SobrePage" />
</Shell>
